<body>
  <div class="box">
    <h1>Portal de Verificación Académica<br>República de Colombia</h1>

    <input type="text" id="cedula" placeholder="Número de cédula de ciudadanía">
    <button onclick="verificar()">Verificar</button>

    <div class="result" id="resultado"></div>
  </div>

<script>
function verificar() {
  const cedula = document.getElementById("cedula").value;
  const resultado = document.getElementById("resultado");

  if (cedula === "16939249") {
    resultado.innerHTML = `
      <strong>Resultado de verificación</strong><br><br>
      Nombre completo: Johan Erwing Hinestroza Torres<br>
      Cédula de ciudadanía: 16.939.249<br>
      Fecha de graduación: 12 de diciembre de 2017<br>
      País: República de Colombia
    `;
  } else {
    resultado.innerHTML = "No se encontró información asociada al número ingresado.";
  }
}
</script>

